#!/bin/bash

# Script to test if there's any error in the sql logs
# after running the install/upgrade script

FileName=UPGRADE_ERRORS.`eval date +%Y%m%d"."%H.%M`

for f in *.log;
do 
	echo >> $FileName
	echo "Processing $f file.."
	echo [ $f ] >> $FileName
	cat $f | grep -B5 -A3 ERROR >> $FileName
done

